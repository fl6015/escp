/* pages/detail/detail.wxss */
.flow_box{padding:20rpx;width:750rpx;box-sizing:border-box;border-bottom:solid 1rpx lightgray;}
.mobilephone{width:28rpx;height:28rpx;padding:6rpx;margin-right:10rpx;border-radius:50%;background:#9CD4FD;}
.flow_recharge{font-size:30rpx;color:#3D3D3D}
.me_my{width:50rpx;height:50rpx;}
.m_t30{margin-top:30rpx;}
.phone_number{font-size:38rpx;color:#333333;font-weight:bold;letter-spacing: 4rpx;}
.address{font-size:24rpx;color:#747474;padding-left:2.1em;height:1em;}

.isbody{padding:10rpx 15rpx 20rpx;width:750rpx;box-sizing:border-box;}
.flow_itembox{width:240rpx;height:150rpx;}
.choose_item{width:212rpx;height:130rpx;border:solid 1rpx #D0D0D0;border-radius:20rpx;filter:drop-shadow(5px 5px 10px #747474);background:#ffffff;}
.youhui_box{position:relative;overflow:hidden;width:inherit;height:inherit;}
.youhui{position:absolute;top:10rpx;right:-30rpx;width:100rpx;background:orange;line-height:1.4;color:#ffffff;font-size:20rpx;text-align:center;transform:rotate(45deg)}
.choose_num{font-size:34rpx;color:#3A3A3A;margin-bottom:8rpx;}
.choose_money{font-size:26rpx;color:#747474;}
.m20{margin-top:10rpx;margin-bottom:20rpx;}
.buy_flow{font-size:36rpx;width:240rpx;height:72rpx;border:solid 1rpx #FF5000;color:#FF5000;text-align:center;line-height:72rpx;border-radius:36rpx;}
.active{color:#FF5000 !important;}
.activebox{filter:drop-shadow(5px 5px 10px #ffffff) !important;border-color:#FF5000 !important;}

.local_flow{padding:0 20rpx;}
.flow_other{border-top:solid 1rpx lightgray;padding:20rpx 0;}
.local_money{font-size:34rpx;color:#393939;margin-right:12rpx;line-height:1;font-weight:bold;}
.yuan{font-size:24rpx;margin-left:6rpx;}
.bottom_align{display: flex;flex-direction:row;justify-content:flex-start;align-items:flex-end;}
.local_prompt{font-size:24rpx;color:#FF5000;margin-top:6rpx;}
.local{padding:0 6rpx;background:#999999;color:#ffffff;border-radius:6rpx;text-align:center;font-size:22rpx;margin-right:8rpx;}
.m_t20{margin-top:20rpx;}
.buy_btn{width:120rpx;height:60rpx;background:linear-gradient(45deg,#FF5000,#E02E24);color:#ffffff;border-radius:8rpx;font-size:28rpx;text-align:center;line-height:60rpx;}

.alert{bottom:40vh;}