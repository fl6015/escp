<!--pages/startArbitration/startArbitration.wxml-->
<view class="container">
    <view class="r_flex header">
        <image mode="scaleToFill" src="{{icons.film}}" class="goods_img" />
        <view class="flex1">
            <view class="goods_title">天堂湾免费浮潜</view>
            <view class="r_flex picbox">
                <view class="text newpic">售价：<text class="red">678元</text></view>
                <view class="delete">原价：987元</view>
            </view>
        </view>
    </view>

    <view class="text m_t30">
        <view class="title">申请仲裁原因：</view>
        <view class="r_flex">
            <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
                <view class="picker r_flex_">
                    <view wx:if="{{index}}" class="">{{array[index]}}</view>
                    <view wx:else class="">请选择</view>
                    <view class="sanjiao"></view>
                </view>
            </picker>
            <icon type="info" size="22"/>
        </view>
    </view>

    <view class="text m_t30">
        <view class="title">申请仲裁截图：</view>
        <view class="r_flex wrap">
            <block wx:if="{{addimgarr.length>0}}">
            <block wx:for="{{addimgarr}}">
                <view class="screenshot_box">
                    <icon class="cancel" type="cancel" size="20" data-index="{{index}}" color="#F24747" catchtap="clearImg"/>
                    <image mode="scaleToFill" data-imgsrc="{{item}}" src="{{item}}" class="screenshot" catchtap="previewImage"/>
                </view>
            </block>
            </block>
            <view class="add_img" bindtap="addImg">
                <view class="add_r isline"></view>
                <view class="add_l isline"></view>
            </view>
            <icon type="info" size="22"/>
        </view>
    </view>

    <view class="text m_t30">
        <view class="title">申请仲裁原因：</view>
        <view class="">
            <textarea bindblur="bindTextAreaBlur" placeholder="仲裁原因" />
        </view>
    </view>
    
</view>

<view class="rfl_ex m_t30">
    <view class="ok btn" bindtap="okArbitration">确认发起</view>
    <view class="clear btn" catchtap="goBack">取消</view>
</view>